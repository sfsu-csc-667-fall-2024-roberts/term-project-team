{
  "name": "term-project-team",
  "version": "1.0.0",
  "description": "Monopoly game project",
  "main": "src/server/index.ts",
  "scripts": {
    "dev": "nodemon src/server/index.ts",
    "start": "ts-node src/server/index.ts",
    "build": "webpack build",
    "build:dev": "webpack build --mode development",
    "watch": "webpack --watch --mode development",
    "server:dev": "nodemon --exec ts-node src/server/index.ts",
    "prepare": "husky install",
    "migrate": "ts-node src/server/db/migrations/runMigrations.ts",
    "test:data": "ts-node src/server/scripts/addTestData.ts",
    "db:reset": "ts-node src/server/scripts/resetDb.ts",
    "db:fresh": "npm run db:reset",
    "db:test": "npm run db:fresh && npm run test:data",
    "cleanup": "pkill -f 'node' || true",
    "predev:test": "npm run cleanup",
    "setup:db": "npm run db:test",
    "setup:build": "npm run build:dev",
    "setup": "npm run setup:db && npm run setup:build",
    "dev:server": "concurrently --kill-others-on-fail \"npm run server:dev\" \"npm run watch\"",
    "dev:full": "npm run cleanup && npm run setup && echo 'Setup complete, starting server...' && npm run dev:server",
    "dev:debug": "DEBUG=* npm run dev:full"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/ws": "^8.5.13",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.18.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/connect-livereload": "^0.6.3",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.0",
    "@types/express-flash": "^0.0.5",
    "@types/express-session": "^1.18.1",
    "@types/livereload": "^0.9.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.8.1",
    "@types/pg": "^8.11.0",
    "@types/webpack": "^5.28.5",
    "concurrently": "^9.1.0",
    "connect-livereload": "^0.6.1",
    "css-loader": "^7.1.2",
    "husky": "^8.0.0",
    "livereload": "^0.9.3",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.7",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}
