{
  "name": "term-project-team",
  "version": "1.0.0",
  "description": "Monopoly game project",
  "main": "src/server/index.ts",
  "scripts": {
    "dev": "nodemon src/server/index.ts",
    "start": "ts-node src/server/index.ts",
    "build": "webpack build",
    "build:dev": "webpack build --mode development --watch",
    "start:dev": "concurrently --names server,frontend -c blue,green \"npm run server:dev\" \"npm run build:dev\"",
    "server:dev": "nodemon --exec ts-node src/server/index.ts --ext ts,js,css,ejs --ignore src/public/js",
    "prepare": "husky install",
    "migrate": "ts-node src/server/db/migrations/runMigrations.ts",
    "test:data": "ts-node src/server/scripts/addTestData.ts",
    "test": "jest",
    "dev:start": "npm run build && npm start"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.18.1",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/connect-livereload": "^0.6.3",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.0",
    "@types/express-flash": "^0.0.5",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.14",
    "@types/livereload": "^0.9.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.8.1",
    "@types/pg": "^8.11.0",
    "@types/webpack": "^5.28.5",
    "concurrently": "^9.1.0",
    "connect-livereload": "^0.6.1",
    "css-loader": "^7.1.2",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "livereload": "^0.9.3",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}
