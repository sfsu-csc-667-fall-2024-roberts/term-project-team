<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monopoly Game</title>
    <link rel="stylesheet" type="text/css" href="/dist/css/styles.css">
</head>
<body>
    <div class="game-container">
        <header class="game-header">
            <div class="header-left">
                <h1 class="game-title">Monopoly</h1>
                <div class="game-id">Game #<%= gameId %></div>
                <div class="game-status" id="game-status">
                    <%= gameState.gamePhase === 'ROLL' ? 'Waiting for roll...' : 
                       gameState.gamePhase === 'ACTION' ? 'Taking action...' :
                       gameState.gamePhase === 'END_TURN' ? 'Ending turn...' :
                       gameState.gamePhase === 'GAME_OVER' ? 'Game Over!' : 'Waiting for players...' %>
                </div>
            </div>
            <div class="header-right">
                <div class="user-info">
                    <span>Playing as: <%= username %></span>
                </div>
                <div class="header-actions">
                    <button id="show-rules" class="header-action-button view-rules-button">Rules</button>
                    <button id="end-game" class="header-action-button danger end-game-button">End Game</button>
                </div>
            </div>
        </header>

        <div class="game-content">
            <section class="players-section">
                <div class="panel-header">
                    <h2 class="panel-title">Players</h2>
                </div>
                <div class="panel-content" id="players-list">
                    <!-- Players will be rendered here by the UIManager -->
                </div>
                <div class="game-controls">
                    <button id="roll-dice" class="btn btn-primary" disabled>Roll Dice</button>
                    <button id="end-turn" class="btn btn-secondary" disabled>End Turn</button>
                </div>
                <div id="game-log" class="game-log">
                    <div class="game-log-header">Game Log</div>
                    <div class="game-log-content"></div>
                </div>
            </section>

            <div class="game-board-wrapper">
                <div class="game-board">
                    <div id="monopoly-board" class="board-wrapper">
                        <!-- Board will be rendered here by the UIManager -->
                    </div>
                </div>
                <div class="dice-container" id="dice-container">
                    <div class="dice" id="dice1">1</div>
                    <div class="dice" id="dice2">1</div>
                </div>
            </div>

            <section class="properties-section">
                <div class="panel-header">
                    <h2 class="panel-title">Properties</h2>
                </div>
                <div class="panel-content" id="properties-list">
                    <!-- Properties will be rendered here by the UIManager -->
                </div>
            </section>
        </div>

        <!-- Game Messages -->
        <div class="game-messages" id="game-messages"></div>

        <!-- Message History Panel -->
        <div class="message-history-panel hidden" id="message-history">
            <div class="message-history-header">
                <h3>Game History</h3>
                <button class="close-btn">&times;</button>
            </div>
            <div class="message-history-content" id="message-history-content">
                <% gameState.gameLog.forEach((event) => { %>
                    <div class="game-event">
                        <span class="timestamp"><%= new Date(event.timestamp).toLocaleTimeString() %></span>
                        <span class="description"><%= event.description %></span>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <!-- Error Container -->
    <div id="error-container" class="error-container"></div>

    <script>
        window.GAME_ID = '<%= gameId %>';
        window.USER_TOKEN = '<%= token %>';
        window.monopolyGameData = {
            gameId: <%= gameId %>,
            currentUserId: <%= currentUserId %>,
            currentPlayerId: <%= currentPlayerId %>,
            token: '<%= token %>',
            players: <%- JSON.stringify(gameState.players) %>,
            properties: <%- JSON.stringify(gameState.properties) %>,
            gameState: <%- JSON.stringify(gameState) %>
        };
    </script>
    <script src="/dist/js/game.bundle.js" type="module"></script>
</body>
</html> 